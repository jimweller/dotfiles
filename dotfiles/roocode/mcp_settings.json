{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": "10000"
      },
      "alwaysAllow": [
        "resolve-library-id",
        "get-library-docs"
      ]
    },
    "GoogleResearcher": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "container",
        "run",
        "-i",
        "--rm",
        "google-research-mcp"
      ],
      "alwaysAllow": [
        "scrape_page",
        "analyze_with_gemini",
        "research_topic",
        "google_search"
      ]
    },
    "repomix": {
      "command": "npx",
      "args": [
        "-y",
        "repomix",
        "--mcp"
      ],
      "alwaysAllow": [
        "pack_codebase",
        "pack_remote_repository",
        "attach_packed_output",
        "read_repomix_output"
      ]
    }
  }
}