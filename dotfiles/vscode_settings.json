  "peacock.surpriseMeOnStartup": true,
  "peacock.surpriseMeFromFavoritesOnly": true,
  "githubLocalActions.dockerDesktopPath": "/Applications/Docker.app",
  "docker.extension.enableComposeLanguageServer": false,
  "sqlite3-editor.ui.minimizePanel": true,
  "cSpell.enabled": false,
  "makefile.configureOnOpen": true,

  // =============================================================================
  // LAUNCH CONFIGURATION
  // Debug and launch configuration settings
  // =============================================================================

  "launch": {
    "configurations": []
  },

  // =============================================================================
  // EXTREME CUSTOMIZATON
  // Tweak core css
  // =============================================================================
  "workbench.activityBar.location": "bottom",
  // "roo-cline.autoImportSettingsPath": "~/.roo/roo-code-settings.json",
  "roo-cline.deniedCommands": [],
  "workbench.editor.enablePreview": false,
