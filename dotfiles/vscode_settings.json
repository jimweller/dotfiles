{
  // =============================================================================
  // LANGUAGE-SPECIFIC EDITOR SETTINGS
  // Configuration that applies to specific file types and language modes
  // =============================================================================

  "[dockercompose]": {
    "editor.autoIndent": "advanced"
  },
  "[github-actions-workflow]": {
    "editor.autoIndent": "advanced",
    "editor.indentSize": 2
  },
  "[yaml]": {
    "editor.autoIndent": "advanced",
    "editor.indentSize": 2,
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "diffEditor.ignoreTrimWhitespace": false
  },
  "[html]": {
    "editor.indentSize": 2,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "files.associations": {
    "*.bats": "shellscript"
  },

  // =============================================================================
  // CORE EDITOR CONFIGURATION
  // General editor behavior, appearance, and interaction settings
  // =============================================================================

  "editor.accessibilitySupport": "off",
  "editor.detectIndentation": false,
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.tabSize": 2,
  "editor.fontFamily": "MesloLGL Nerd Font, FiraCode Nerd Font, SauceCodePro Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "selection",
  "editor.folding": false,
  "editor.matchBrackets": "never",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "diffEditor.ignoreTrimWhitespace": true,

  // =============================================================================
  // WORKBENCH AND UI SETTINGS
  // VSCode interface layout, themes, and visual customizations
  // =============================================================================

  "workbench.colorCustomizations": {
    "[*]": {
      "terminal.background": "#000000"
    }
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.applyToAllProfiles": ["editor.detectIndentation"],
  "workbench.startupEditor": "none",
  "workbench.editor.showIcons": false,
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.drawio.png": "hediet.vscode-drawio"
  },
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.statusBar.visible": true,
  "workbench.localHistory.enabled": false,
  "workbench.productIconTheme": "material-product-icons",
  "window.confirmSaveUntitledWorkspace": false,
  "window.title": "${dirty}${rootName}:${activeEditorShort}",
  "breadcrumbs.enabled": false,

  // =============================================================================
  // TERMINAL CONFIGURATION
  // Terminal profiles, shell settings, and terminal appearance
  // =============================================================================

  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.automationProfile.osx": null,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.environmentChangesRelaunch": false,
  "terminal.integrated.fontFamily": "Mononoki Nerd Font",
  "terminal.integrated.tabs.defaultIcon": "terminal-powershell",
  "terminal.integrated.env.osx": {
    "Q_NEW_SESSION": "1"
  },
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": ["-l"],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "fish": {
      "path": "fish",
      "args": ["-l"]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    },
    "ohmyzsh": {
      "path": "/bin/bash",
      "args": ["-l"]
    }
  },
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "bash": {
      "path": "bash",
      "args": ["-l"]
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.fontSize": 14,

  // =============================================================================
  // FILE EXPLORER AND HANDLING
  // File system navigation and file operation settings
  // =============================================================================

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 2,

  // =============================================================================
  // GIT AND VERSION CONTROL
  // Source control integration and Git-specific settings
  // =============================================================================

  "git.openRepositoryInParentFolders": "never",
  "git.blame.editorDecoration.enabled": false,

  // =============================================================================
  // SECURITY AND PRIVACY
  // Trust, telemetry, and security-related configurations
  // =============================================================================

  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",

  // =============================================================================
  // DEVELOPMENT CONTAINERS
  // Dev container configuration and default settings
  // =============================================================================

  "dev.containers.defaultExtensions": [
    "rooveterinaryinc.roo-cline",
    // "anthropic.claude-code",
    // "bierner.github-markdown-preview",
    // "bierner.markdown-checkbox",
    // "bierner.markdown-emoji",
    // "bierner.markdown-footnotes",
    // "bierner.markdown-mermaid",
    // "bierner.markdown-preview-github-styles",
    // "bierner.markdown-yaml-preamble",
    // "davidanson.vscode-markdownlint",
    // "yzhang.markdown-all-in-one",
    // "docker.docker",
    // "eamodio.gitlens",
    // "mcsodbrenner.better-open-editors",
    // "mhutchie.git-graph",
    // "usernamehw.errorlens",
    "esbenp.prettier-vscode"
  ],
  "dev.containers.defaultFeatures": {
    "https://raw.githubusercontent.com/jimweller/dotfiles/main/dotfiles/devcontainer-feature-fix-zsh-feature.tgz": {}
  },
  "dev.containers.copyGitConfig": false,
  "dev.containers.mountWaylandSocket": false,
  "dev.containers.optimisticallyLaunchDocker": false,
  "dev.containers.gitCredentialHelperConfigLocation": "none",
  "dev.containers.dockerCredentialHelper": false,

  // =============================================================================
  // EXTENSION-SPECIFIC SETTINGS
  // Configuration for installed VSCode extensions
  // =============================================================================

  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.theme": "kennedy",
  "markdown-preview-github-styles.colorTheme": "light",
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "terraform.languageServer.enable": true,
  "html.validate.scripts": false,
  "html.validate.styles": false,
  "html.format.indentInnerHtml": true,
  "html.format.extraLiners": "body",
  "html.format.wrapLineLength": 0,
  "html.format.indentHandlebars": true,
  "sshfs.configs": [
    {
      "name": "jimweller",
      "host": "jimweller.com",
      "agent": "$SSH_AUTH_SOCK",
      "username": "jimwelle",
      "newFileMode": "0o644",
      "root": "/home4/jimwelle",
      "privateKeyPath": "/Users/jim.weller/.ssh/id_rsa"
    }
  ],
  "errorLens.enabled": false,
  "go.toolsManagement.autoUpdate": true,
  "roo-cline.allowedCommands": [
    "tsc",
    "git log",
    "git diff",
    "git show",
    "sqllite3",
    "az",
    "aws",
    "go",
    "make",
    "npm",
    "npx",
    "uvx",
    "uv",
    "docker",
    "psql",
    "head",
    "tail",
    "bats",
    "cd",
    "pwd",
    "ls",
    "chmod",
    "export",
    "./test-submission.sh",
    "timeout",
    "chmod +x",
    "./debug_reliability_focused.sh",
    "cat"
  ],
  "dotfiles.repository": "https://github.com/jimweller/dotfiles",
  "dotfiles.targetPath": "~/dotfiles",
