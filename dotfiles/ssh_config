# macOS-specific includes and DevPod configs
Match host * exec "test $(uname) = Darwin"
  Include /Users/jimweller/.colima/ssh_config

# DevPod configs (macOS only)
Match host vscode-remote-try-cpp.devpod exec "test $(uname) = Darwin"
  ForwardAgent yes
  LogLevel error
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  HostKeyAlgorithms rsa-sha2-256,rsa-sha2-512,ssh-rsa
  ProxyCommand "/Applications/DevPod.app/Contents/MacOS/devpod-cli" ssh --stdio --context default --user vscode vscode-remote-try-cpp
  User vscode

Match host claude-flow.devpod exec "test $(uname) = Darwin"
  ForwardAgent yes
  LogLevel error
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  HostKeyAlgorithms rsa-sha2-256,rsa-sha2-512,ssh-rsa
  ProxyCommand "/Applications/DevPod.app/Contents/MacOS/devpod-cli" ssh --stdio --context default --user node claude-flow
  User node

# macOS-specific settings for automatic key management
Match host * exec "test $(uname) = Darwin"
  AddKeysToAgent yes
  UseKeychain yes

# Cross-platform settings
Host *
  AddKeysToAgent yes
  IdentitiesOnly no

Host jimweller.com
  HostName jimweller.com
  User jimwelle
  IdentityFile ~/.ssh/id_jim
  IdentitiesOnly yes

Host vs-ssh.visualstudio.com
  HostName vs-ssh.visualstudio.com
  User mcgsead
  IdentityFile ~/.ssh/id_mcg
  IdentitiesOnly yes

Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_jim
  IdentitiesOnly yes