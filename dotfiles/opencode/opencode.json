{
  "$schema": "https://opencode.ai/config.json",
  "model": "amazon-bedrock/global.anthropic.claude-opus-4-6-v1",
  "small_model": "amazon-bedrock/global.anthropic.claude-sonnet-4-5-20250929-v1:0",
  "provider": {
    "amazon-bedrock": {
      "options": {
        "region": "us-west-2",
        "profile": "default"
      },
      "models": {
        "global.anthropic.claude-opus-4-5-20251101-v1:0": {
          "name": "aws/Claude Opus 4.5"
        },
        "global.anthropic.claude-opus-4-6-v1": {
          "name": "aws/Claude Opus 4.6"
        },
        "global.anthropic.claude-sonnet-4-5-20250929-v1:0": {
          "name": "aws/Claude Sonnet 4.5"
        },
        "global.anthropic.claude-haiku-4-5-20251001-v1:0": {
          "name": "aws/Claude Haiku 4.5"
        }
      },
      "whitelist": [
        "global.anthropic.claude-opus-4-6-v1",
        "global.anthropic.claude-opus-4-5-20251101-v1:0",
        "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
        "global.anthropic.claude-haiku-4-5-20251001-v1:0"
      ]
    },
    "google": {
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}"
      },
      "models": {
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro"
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash"
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro"
        }
      },
      "whitelist": [
        "gemini-2.5-pro",
        "gemini-2.5-flash",
        "gemini-3-pro-preview"
      ]
    },
    "openai": {
      "options": {
        "apiKey": "{env:OPENAI_KEY}"
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT-5.2"
        },
        "gpt-5.2-pro": {
          "name": "GPT-5.2 Pro"
        },
        "gpt-5-mini": {
          "name": "GPT-5 Mini"
        },
        "gpt-5-nano": {
          "name": "GPT-5 Nano"
        }
      },
      "whitelist": [
        "gpt-5.2",
        "gpt-5.2-pro",
        "gpt-5-mini",
        "gpt-5-nano"
      ]
    },
    "az-anthropic": {
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "https://mcg-dxclinical-fais.services.ai.azure.com/anthropic/v1",
        "apiKey": "{env:ANTHROPIC_FOUNDRY_API_KEY}"
      },
      "models": {
        "claude-opus-4-6": {
          "name": "az/Claude Opus 4.6"
        },
        "claude-sonnet-4-5": {
          "name": "az/Claude Sonnet 4.5"
        },
        "claude-haiku-4-5": {
          "name": "az/Claude Haiku 4.5"
        }
      },
      "whitelist": [
        "claude-opus-4-6",
        "claude-sonnet-4-5",
        "claude-haiku-4-5"
      ]
    },
    "az-foundry": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://mcg-dxclinical-fais.services.ai.azure.com/models",
        "apiKey": "{env:ANTHROPIC_FOUNDRY_API_KEY}"
      },
      "models": {
        "deepseek-3-2": {
          "name": "az/DeepSeek V3.2"
        }
      },
      "whitelist": [
        "deepseek-3-2"
      ]
    }
  },
  "enabled_providers": ["amazon-bedrock", "google", "openai", "az-anthropic", "az-foundry"],
  "mcp": {
    "c7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "10000"
      },
      "enabled": true
    },
    "g": {
      "type": "local",
      "command": ["npx", "-y", "github:jimweller/google-research-mcp"],
      "environment": {
        "GOOGLE_CUSTOM_SEARCH_API_KEY": "{env:GOOGLE_SEARCH_API_KEY}",
        "GOOGLE_CUSTOM_SEARCH_ID": "{env:GOOGLE_SEARCH_ID}",
        "GOOGLE_GEMINI_API_KEY": "{env:GOOGLE_GEMINI_API_KEY}"
      },
      "enabled": true
    },
    "repomix": {
      "type": "local",
      "command": ["npx", "-y", "repomix", "--mcp"],
      "enabled": true
    }
  }
}
